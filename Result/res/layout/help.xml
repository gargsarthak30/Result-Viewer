<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#0097A7">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="367dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:src="@drawable/main" >
        </ImageView>

        <TextView
            android:paddingTop="30sp"
            android:id="@+id/help1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="If you are having any problem while logging in or signing up, send your details (college ID + registration Number + password) at: "
            android:textSize="12sp" 
            android:textColor="#FFFFFF"/>
			
        	 <TextView
            android:id="@+id/about_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:gravity="center_horizontal"
            android:text="gburesult@gmail.com"
            android:textAppearance="?android:attr/textAppearanceSmall" 
			android:textColor="#FFFFFF"/>
        
        <TextView
            android:paddingTop="10sp"
            android:id="@+id/help2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Did'nt liked the app. Use webservice for the same."
            android:textSize="12sp" 
            android:textColor="#FFFFFF"/>
        </LinearLayout>

</ScrollView>