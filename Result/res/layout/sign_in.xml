    android:gravity = "bottom">
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="176dp"
        android:layout_weight="0.53"
        android:adjustViewBounds="true"
        android:src="@drawable/main" />
    
